<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="bottom_navigation">
        <item name="android:background">@color/design_default_color_surface</item>
        <item name="itemIconTint">#F44336</item>
        <item name="android:textColor">@drawable/buttom_navigation_selector</item>
    </style>

    <style name="ToolbarTitle" parent="ThemeOverlay.AppCompat.ActionBar">
        
        <item name="titleTextColor">#F65B50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/design_default_color_surface</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:scrollbarFadeDuration">200</item>
        <item name="android:gravity">center_vertical</item>

    </style>
    <style name="writing_toolbar_button" parent="ToolbarTitle">
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:width">38dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>

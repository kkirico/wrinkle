<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flagtag.wrinkle">


    <!-- 인터넷 권한 선언 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 카메라 권한 선언 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 핸드폰 스토리지에 접근하는 권한 선언-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.flagtag.wrinkle.activity.MainActivity">
            <!--  인텐트 필터로 첫 실행 액티비티 선정 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />


                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="google.com"/>
            </intent-filter>
        </activity>
        <activity android:name="com.flagtag.wrinkle.activity.googleLoginActivity">

        </activity>
        <activity android:name="com.flagtag.wrinkle.activity.LoginActivity"/>
        <activity android:name="com.flagtag.wrinkle.activity.PasswordResetActivity"/>
        <activity android:name="com.flagtag.wrinkle.activity.MemberActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.CameraActivity"/>
        <activity android:name=".activity.GalleryActivity"/>
        <activity android:name=".activity.BasicActivity"/>



    </application>

</manifest>
